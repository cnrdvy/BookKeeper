@using BookKeeper.Application.Books.GetBooks;
@using BookKeeper.UI.Pages.ViewModels;

@model BookViewModel;

<div class="col">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                @Model.Title by @string.Join(
                    ", ", 
                    Model.Authors.Select(a => $"{a.FirstName} {a.LastName}"))
            </h5>
            <a href="#" class="btn btn-primary">View</a>
        </div>
    </div>
</div>