@page
@{
    ViewData["Title"] = "Register";
    @model RegisterModel
}

@section Scripts {
    <partial name="@PartialNames.ValidationScripts"></partial>
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <label asp-for="UserModel.FirstName" class="form-label"></label>
                    <input asp-for="UserModel.FirstName" class="form-control" />
                    <span asp-validation-for="UserModel.FirstName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.LastName" class="form-label"></label>
                    <input asp-for="UserModel.LastName" class="form-control" />
                    <span asp-validation-for="UserModel.LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.Email" class="form-label"></label>
                    <input asp-for="UserModel.Email" class="form-control" />
                    <span asp-validation-for="UserModel.Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.Password" class="form-label"></label>
                    <input asp-for="UserModel.Password" type="password" class="form-control"/>
                    <span asp-validation-for="UserModel.Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.PasswordConfirmation" class="form-label"></label>
                    <input asp-for="UserModel.PasswordConfirmation" type="password" class="form-control"/>
                    <span asp-validation-for="UserModel.PasswordConfirmation"></span>
                </div>
                <div class="col-md-2 mt-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>